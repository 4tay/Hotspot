<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mainLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        >

    <include layout="@layout/activity_maps" app:layout_anchorGravity="right|bottom" app:layout_anchor="@+id/btnRate4"/>

    <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            android:foreground="?attr/selectableItemBackground"
            app:itemIconTint="#bc2525"
            app:itemTextColor="#bc2525"
            app:menu="@menu/navigation"
            app:layout_anchor="@+id/bottom_sheet"
            app:layout_anchorGravity="top"
            app:elevation="4dp"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:id="@+id/btnOpenRatingWheel"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="60sp"
            android:src="@drawable/fire_icon"
            app:layout_anchor="@+id/navigation"
            app:layout_anchorGravity="top|end"
            app:backgroundTint="#bc2525"
            app:elevation="7dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/btnRate1"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="170sp"
            android:layout_marginBottom="0sp"
            android:src="@drawable/fire_icon"
            android:visibility="invisible"
            android:clickable="false"
            app:layout_anchor="@+id/btnOpenRatingWheel"
            app:layout_anchorGravity="center"
            app:backgroundTint="#eacece"
            app:elevation="6dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/btnRate2"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="134sp"
            android:src="@drawable/fire_icon"
            android:visibility="invisible"
            android:clickable="false"
            app:layout_anchor="@+id/btnOpenRatingWheel"
            app:layout_anchorGravity="top|center"
            app:backgroundTint="#d19494"
            app:elevation="6dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/btnRate3"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="123sp"
            android:layout_marginBottom="185sp"
            android:src="@drawable/fire_icon"
            android:visibility="invisible"
            android:clickable="false"
            app:layout_anchor="@+id/btnOpenRatingWheel"
            app:layout_anchorGravity="top|center"
            app:backgroundTint="#ba5959"
            app:elevation="6dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/btnRate4"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="62sp"
            android:layout_marginBottom="222sp"
            android:src="@drawable/fire_icon"
            android:visibility="invisible"
            android:clickable="false"
            app:layout_anchor="@+id/btnOpenRatingWheel"
            app:layout_anchorGravity="top|center"
            app:backgroundTint="#bc4343"
            app:elevation="6dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/btnRate5"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="0sp"
            android:layout_marginBottom="230sp"
            android:src="@drawable/fire_icon"
            android:visibility="invisible"
            android:clickable="false"
            app:layout_anchor="@+id/btnOpenRatingWheel"
            app:layout_anchorGravity="top|end"
            app:backgroundTint="#bc2525"
            app:elevation="6dp"
    />
    <android.support.design.widget.FloatingActionButton
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/btnHash"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:longClickable="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="145sp"
            android:src="@drawable/ic_chat_black_24dp"
            android:clickable="false"
            app:layout_anchor="@+id/btnOpenRatingWheel"
            app:layout_anchorGravity="top|center"
            app:backgroundTint="#bc2525"
            app:elevation="6dp"
    />
    <include layout="@layout/drawer"/>


</android.support.design.widget.CoordinatorLayout>